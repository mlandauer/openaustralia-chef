#!/bin/sh
#
# PROVIDE: thin
# REQUIRE: LOGIN
# KEYWORD: shutdown

. /etc/rc.subr

name="thin"
rcvar=`set_rcvar`

load_rc_config $name

: ${thin_enable="NO"}

# pidfile='<%= @node[:planningalerts][:test][:install_path] %>/shared/pids/thin.pid'
